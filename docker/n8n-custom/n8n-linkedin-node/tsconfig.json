{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2021"],
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}